{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./api",
    "rootDir": "./api",
    "declaration": false,
    "noEmit": false
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules"]
} 